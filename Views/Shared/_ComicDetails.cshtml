@model ComicModel;

<div class="wizard-container">
  <div class="card wizard-card" data-color="blue" id="wizardProfile">
    <div class="wizard-header">
      <h3>
        <b>@Model.title</b> <br />
        <small>@Model.month/@Model.day/@Model.year</small>
      </h3>
    </div>

    <div class="wizard-navigation">
      <div class="tab-content">
        <div class="tab-pane active">
          <div class="row">
            <div class="col-md-10 offset-md-1">
              <img class="comic-img" src="@Model.img" />
              <p>@Model.alt</p>
            </div>
          </div>
        </div>
      </div>
      <div class="wizard-footer height-wizard">
        <div class="pull-right">
          @if(Model.nextNum > 0){
          <a
            class="btn btn-next btn-fill btn-warning btn-wd btn-sm"
            asp-action="Comic"
            asp-route-num="@Model.nextNum"
            >Next</a
          >
          }
        </div>

        <div class="pull-left">
          @if(Model.prevNum > 0){
          <a
            class="btn btn-previous btn-fill btn-default btn-wd btn-sm"
            asp-action="Comic"
            asp-route-num="@Model.prevNum"
            >Previous</a
          >
          }
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>
</div>
